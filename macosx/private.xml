<?xml version="1.0"?>
<root>
  <appdef>
    <appname>RDP</appname>
    <equal>com.microsoft.rdc.mac</equal>
    <equal>com.apple.ScreenSharing</equal>
  </appdef>

  <item>
    <name>Swap Control and Command (only in RDP)</name>
    <only>RDP</only>
    <identifier>private.swap_control_and_command_in_rdp</identifier>
    <autogen>__KeyToKey__ KeyCode::CONTROL_L, KeyCode::COMMAND_L</autogen>
    <autogen>__KeyToKey__ KeyCode::COMMAND_L, KeyCode::CONTROL_L</autogen>
  </item>

  <appdef>
    <appname>EMACS</appname>
    <equal>org.gnu.Emacs</equal>
    <equal>org.gnu.AquamacsEmacs</equal>
    <equal>org.gnu.Aquamacs</equal>
    <equal>org.pqrs.unknownapp.conkeror</equal>
    <equal>com.github.atom</equal>
    <equal>com.jetbrains.rubymine</equal>
    <equal>com.xamarin.monodevelop</equal>
    <equal>org.eclipse.eclipse</equal>
    <equal>com.runningwithcrayons.Alfred-2</equal>
    <equal>com.microsoft.VSCode</equal>
  </appdef>

  <item>
    <name>Swap Control and Command (only in Eamcs)</name>
    <only>EMACS</only>
    <identifier>private.swap_control_and_command</identifier>
    <autogen>__KeyToKey__ KeyCode::CONTROL_L, KeyCode::COMMAND_L</autogen>
    <autogen>__KeyToKey__ KeyCode::COMMAND_L, KeyCode::CONTROL_L</autogen>
    <autogen>
      __KeyToKey__
      KeyCode::SPACE, ModifierFlag::CONTROL_L,
      KeyCode::SPACE, ModifierFlag::COMMAND_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::SPACE, ModifierFlag::COMMAND_L,
      KeyCode::SPACE, ModifierFlag::CONTROL_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::TAB, ModifierFlag::CONTROL_L,
      KeyCode::TAB, ModifierFlag::COMMAND_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_1, ModifierFlag::COMMAND_L,
      KeyCode::KEY_1, ModifierFlag::CONTROL_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_2, ModifierFlag::COMMAND_L,
      KeyCode::KEY_2, ModifierFlag::CONTROL_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_3, ModifierFlag::COMMAND_L,
      KeyCode::KEY_3, ModifierFlag::CONTROL_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_4, ModifierFlag::COMMAND_L,
      KeyCode::KEY_4, ModifierFlag::CONTROL_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_5, ModifierFlag::COMMAND_L,
      KeyCode::KEY_5, ModifierFlag::CONTROL_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_6, ModifierFlag::COMMAND_L,
      KeyCode::KEY_6, ModifierFlag::CONTROL_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_7, ModifierFlag::COMMAND_L,
      KeyCode::KEY_7, ModifierFlag::CONTROL_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_8, ModifierFlag::COMMAND_L,
      KeyCode::KEY_8, ModifierFlag::CONTROL_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_9, ModifierFlag::COMMAND_L,
      KeyCode::KEY_9, ModifierFlag::CONTROL_L
    </autogen>
  </item>

  <item>
    <name>Use Terminal Style Bindings (except Eamcs)</name>
    <not>EMACS</not>
    <identifier>private.use_terminal_style_bindings</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::M, ModifierFlag::COMMAND_L,
      KeyCode::RETURN
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::I, ModifierFlag::COMMAND_L,
      KeyCode::TAB
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::I, ModifierFlag::OPTION_L,
      KeyCode::TAB, ModifierFlag::SHIFT_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::BRACKET_LEFT, ModifierFlag::COMMAND_L,
      KeyCode::ESCAPE
    </autogen>
  </item>
</root>
